<div class="w-full">
  <!-- Hero Section -->
  <section class="relative overflow-hidden -mt-28 pt-28 bg-gradient-to-br from-lavender-900 via-charcoal-900 to-mustard-900">
    <!-- Subtle gradient overlays -->
    <div class="absolute top-0 left-0 w-full h-full pointer-events-none">
      <div class="absolute top-1/4 -left-20 w-64 h-64 bg-lavender-500/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 -right-20 w-64 h-64 bg-mustard-400/15 rounded-full blur-3xl"></div>
    </div>

    <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-20">
      <div class="text-center">
        <!-- Problem statement -->
        <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-white/10 backdrop-blur-sm rounded-full mb-6 border border-white/10">
          <span class="text-white/90 text-xs font-medium"><%= t('landing.views.index.hero.eyebrow') %></span>
        </div>

        <!-- Main headline -->
        <h1 class="text-3xl md:text-5xl font-bold text-white mb-4 leading-tight">
          <%= t('landing.views.index.hero.headline_part1') %>
          <span class="bg-gradient-to-r from-lavender-300 via-mustard to-lavender-200 bg-clip-text text-transparent">
            <%= t('landing.views.index.hero.headline_highlight') %>
          </span>
        </h1>

        <!-- Subheadline -->
        <p class="text-base md:text-lg text-white/80 mb-8 leading-relaxed max-w-2xl mx-auto">
          <%= t('landing.views.index.hero.subheadline') %>
        </p>

        <!-- CTA buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-3 mb-8">
          <%= link_to new_user_path, class: "group w-full sm:w-auto inline-flex items-center justify-center gap-2 px-6 py-3 bg-white text-lavender-700 font-semibold rounded-lg hover:bg-lavender-50 hover:shadow-lg transition-all duration-200" do %>
            <%= t('landing.views.index.hero.primary_cta') %>
            <svg class="w-4 h-4 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          <% end %>
          <%= link_to new_session_path, class: "w-full sm:w-auto inline-flex items-center justify-center gap-2 px-6 py-3 bg-white/10 backdrop-blur-sm text-white font-medium rounded-lg border border-white/20 hover:bg-white/20 transition-all duration-200" do %>
            <%= t('landing.views.index.hero.secondary_cta') %>
          <% end %>
        </div>

        <!-- Trust indicators -->
        <div class="flex flex-wrap items-center justify-center gap-6 text-white/60 text-xs">
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span><%= t('landing.views.index.hero.trust_free') %></span>
          </div>
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span><%= t('landing.views.index.hero.trust_simple') %></span>
          </div>
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span><%= t('landing.views.index.hero.trust_projects') %></span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="py-20 md:py-28 bg-lavender-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-charcoal mb-4">
          <%= t('landing.views.index.how_it_works.title') %>
        </h2>
        <p class="text-lg md:text-xl text-charcoal-500 max-w-2xl mx-auto">
          <%= t('landing.views.index.how_it_works.subtitle') %>
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
        <!-- Step 1 -->
        <div class="relative group">
          <div class="bg-white rounded-2xl p-8 shadow-lg border border-charcoal-100 hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
            <!-- Step number -->
            <div class="absolute -top-4 -left-4 w-12 h-12 rounded-full bg-gradient-to-br from-lavender to-lavender-600 flex items-center justify-center shadow-lg">
              <span class="text-white font-bold text-xl">1</span>
            </div>

            <!-- Icon -->
            <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-lavender-100 to-lavender-200 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-lavender-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>

            <h3 class="text-xl font-bold text-charcoal mb-3">
              <%= t('landing.views.index.how_it_works.step1_title') %>
            </h3>
            <p class="text-charcoal-500 leading-relaxed">
              <%= t('landing.views.index.how_it_works.step1_description') %>
            </p>
          </div>

          <!-- Connector arrow (hidden on mobile) -->
          <div class="hidden md:block absolute top-1/2 -right-6 lg:-right-10 -translate-y-1/2 text-lavender-300">
            <svg class="w-8 h-8 lg:w-12 lg:h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </div>
        </div>

        <!-- Step 2 -->
        <div class="relative group">
          <div class="bg-white rounded-2xl p-8 shadow-lg border border-charcoal-100 hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
            <!-- Step number -->
            <div class="absolute -top-4 -left-4 w-12 h-12 rounded-full bg-gradient-to-br from-mustard to-mustard-500 flex items-center justify-center shadow-lg">
              <span class="text-white font-bold text-xl">2</span>
            </div>

            <!-- Icon -->
            <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-mustard-100 to-mustard-200 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-mustard-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>

            <h3 class="text-xl font-bold text-charcoal mb-3">
              <%= t('landing.views.index.how_it_works.step2_title') %>
            </h3>
            <p class="text-charcoal-500 leading-relaxed">
              <%= t('landing.views.index.how_it_works.step2_description') %>
            </p>
          </div>

          <!-- Connector arrow (hidden on mobile) -->
          <div class="hidden md:block absolute top-1/2 -right-6 lg:-right-10 -translate-y-1/2 text-mustard-300">
            <svg class="w-8 h-8 lg:w-12 lg:h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </div>
        </div>

        <!-- Step 3 -->
        <div class="relative group">
          <div class="bg-white rounded-2xl p-8 shadow-lg border border-charcoal-100 hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
            <!-- Step number -->
            <div class="absolute -top-4 -left-4 w-12 h-12 rounded-full bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center shadow-lg">
              <span class="text-white font-bold text-xl">3</span>
            </div>

            <!-- Icon -->
            <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-green-100 to-green-200 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-green-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>

            <h3 class="text-xl font-bold text-charcoal mb-3">
              <%= t('landing.views.index.how_it_works.step3_title') %>
            </h3>
            <p class="text-charcoal-500 leading-relaxed">
              <%= t('landing.views.index.how_it_works.step3_description') %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Problem/Solution Section -->
  <section class="py-20 md:py-28 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Problem -->
        <div>
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-red-50 rounded-full mb-6 border border-red-200">
            <span class="text-red-700 text-sm font-semibold"><%= t('landing.views.index.problem.label') %></span>
          </div>

          <h2 class="text-3xl md:text-4xl font-bold text-charcoal mb-6">
            <%= t('landing.views.index.problem.title') %>
          </h2>

          <div class="space-y-4">
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="text-charcoal-600 text-lg"><%= t('landing.views.index.problem.point1') %></p>
            </div>

            <div class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="text-charcoal-600 text-lg"><%= t('landing.views.index.problem.point2') %></p>
            </div>

            <div class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="text-charcoal-600 text-lg"><%= t('landing.views.index.problem.point3') %></p>
            </div>
          </div>
        </div>

        <!-- Solution -->
        <div>
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-green-50 rounded-full mb-6 border border-green-200">
            <span class="text-green-700 text-sm font-semibold"><%= t('landing.views.index.solution.label') %></span>
          </div>

          <h2 class="text-3xl md:text-4xl font-bold text-charcoal mb-6">
            <%= t('landing.views.index.solution.title') %>
          </h2>

          <div class="space-y-4">
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="text-charcoal-600 text-lg"><%= t('landing.views.index.solution.point1') %></p>
            </div>

            <div class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="text-charcoal-600 text-lg"><%= t('landing.views.index.solution.point2') %></p>
            </div>

            <div class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="text-charcoal-600 text-lg"><%= t('landing.views.index.solution.point3') %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Project Types Section -->
  <section class="py-20 md:py-28 bg-gradient-to-br from-lavender-50 via-white to-mustard-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-charcoal mb-4">
          <%= t('landing.views.index.project_types.title') %>
        </h2>
        <p class="text-lg md:text-xl text-charcoal-500 max-w-3xl mx-auto">
          <%= t('landing.views.index.project_types.subtitle') %>
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Tech Projects -->
        <div class="bg-white rounded-2xl p-6 shadow-lg border border-charcoal-100 hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-charcoal mb-2">
            <%= t('landing.views.index.project_types.tech_title') %>
          </h3>
          <p class="text-charcoal-500 text-sm leading-relaxed">
            <%= t('landing.views.index.project_types.tech_description') %>
          </p>
        </div>

        <!-- Creative Projects -->
        <div class="bg-white rounded-2xl p-6 shadow-lg border border-charcoal-100 hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-pink-500 to-purple-600 flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-charcoal mb-2">
            <%= t('landing.views.index.project_types.creative_title') %>
          </h3>
          <p class="text-charcoal-500 text-sm leading-relaxed">
            <%= t('landing.views.index.project_types.creative_description') %>
          </p>
        </div>

        <!-- Community Projects -->
        <div class="bg-white rounded-2xl p-6 shadow-lg border border-charcoal-100 hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-charcoal mb-2">
            <%= t('landing.views.index.project_types.community_title') %>
          </h3>
          <p class="text-charcoal-500 text-sm leading-relaxed">
            <%= t('landing.views.index.project_types.community_description') %>
          </p>
        </div>

        <!-- Games & Entertainment -->
        <div class="bg-white rounded-2xl p-6 shadow-lg border border-charcoal-100 hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-orange-500 to-red-600 flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-charcoal mb-2">
            <%= t('landing.views.index.project_types.games_title') %>
          </h3>
          <p class="text-charcoal-500 text-sm leading-relaxed">
            <%= t('landing.views.index.project_types.games_description') %>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="relative overflow-hidden py-16 md:py-20 bg-gradient-to-br from-lavender via-lavender-600 to-mustard">
    <!-- Subtle gradient overlays -->
    <div class="absolute top-0 left-0 w-full h-full pointer-events-none">
      <div class="absolute top-1/4 -left-20 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 -right-20 w-64 h-64 bg-mustard/20 rounded-full blur-3xl"></div>
    </div>

    <div class="relative z-10 max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-4xl font-bold text-white mb-4">
        <%= t('landing.views.index.final_cta.title') %>
      </h2>
      <p class="text-base md:text-lg text-white/90 mb-8 max-w-xl mx-auto">
        <%= t('landing.views.index.final_cta.subtitle') %>
      </p>

      <%= link_to new_user_path, class: "group inline-flex items-center justify-center gap-2 px-8 py-3 bg-white text-lavender-700 font-semibold rounded-lg hover:bg-lavender-50 hover:shadow-lg transition-all duration-200" do %>
        <%= t('landing.views.index.final_cta.button') %>
        <svg class="w-4 h-4 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      <% end %>

      <p class="mt-4 text-white/70 text-xs">
        <%= t('landing.views.index.final_cta.no_credit_card') %>
      </p>
    </div>
  </section>
</div>
