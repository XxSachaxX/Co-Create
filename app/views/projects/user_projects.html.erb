<div class="container mx-auto px-4 py-8">
  <!-- Back navigation -->
  <div class="mb-6">
    <%= link_to projects_path, class: "inline-flex items-center gap-2 text-charcoal-500 hover:text-lavender-700 transition-colors duration-200" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      <span class="text-sm font-medium">Back to all projects</span>
    <% end %>
  </div>

  <!-- Modern Banner -->
  <div class="relative overflow-hidden rounded-2xl bg-gradient-to-r from-lavender via-lavender-400 to-mustard mb-8 p-8 shadow-lg">
    <div class="absolute inset-0 bg-white/10 backdrop-blur-sm"></div>
    <div class="relative flex justify-between items-center">
      <div>
        <div class="flex items-center gap-3 mb-2">
          <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center">
            <span class="text-white text-lg font-medium"><%= @user.name.first.upcase %></span>
          </div>
          <h1 class="text-3xl font-bold text-white"><%= @user.name %>'s Projects</h1>
        </div>
        <p class="text-white/80 text-sm"><%= @projects.count %> <%= @projects.count == 1 ? 'project' : 'projects' %></p>
      </div>c
      <% if authenticated? %>
        <%= link_to "Create a project", new_user_project_path(user_id: @user.id), class: "rounded-lg px-6 py-3 text-lg bg-white text-lavender font-semibold hover:bg-white/90 hover:shadow-md transition-all duration-200" %>
      <% end %>
    </div>
    <!-- Decorative elements -->
    <div class="absolute -top-4 -right-4 w-24 h-24 bg-white/10 rounded-full blur-xl"></div>
    <div class="absolute -bottom-8 -left-8 w-32 h-32 bg-mustard/20 rounded-full blur-2xl"></div>
  </div>

  <% if @projects.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @projects.each do |project| %>
        <%= link_to project_path(project), class: "group relative bg-white rounded-2xl shadow-md border border-charcoal-100 p-6 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 overflow-hidden block" do %>
          <!-- Gradient accent bar -->
          <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-lavender via-lavender-400 to-mustard"></div>

          <!-- Decorative hover effect -->
          <div class="absolute -top-12 -right-12 w-24 h-24 bg-lavender/5 rounded-full blur-xl group-hover:bg-lavender/10 transition-all duration-300"></div>

          <div class="relative">
            <!-- Pending requests pill (only visible to owner) -->
            <% if project.owner?(@user) %>
              <% pending_count = project.project_membership_requests.pending.count %>
              <% if pending_count > 0 %>
                <div class="absolute top-0 right-0 bg-lavender text-white text-xs font-semibold px-3 py-1 rounded-full">
                  <%= pending_count %> pending <%= pending_count > 1 ? 'requests' : 'request' %>
                </div>
              <% end %>
            <% end %>

            <h2 class="text-lg font-bold mb-3 truncate text-charcoal group-hover:text-lavender-700 transition-colors duration-200"><%= project.name %></h2>
            <p class="text-charcoal-500 text-sm mb-5 line-clamp-3 leading-relaxed"><%= project.description %></p>

            <div class="flex justify-between items-center pt-4 border-t border-charcoal-100">
              <span class="text-xs text-charcoal-400">
                <%= project.created_at.strftime("%b %d, %Y") %>
              </span>
              <span class="inline-flex items-center gap-1 px-3 py-1 bg-gradient-to-r from-lavender-50 to-mustard-50 text-lavender-700 text-xs font-medium rounded-full border border-lavender-200">
                <span class="w-1.5 h-1.5 bg-green-500 rounded-full animate-pulse"></span>
                Active
              </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="inline-block p-8 bg-white rounded-2xl shadow-md border border-charcoal-100">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-lavender-100 to-mustard-100 flex items-center justify-center">
          <svg class="w-8 h-8 text-lavender-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>

        <% if authenticated? %>
          <%= link_to "Create a project", new_user_project_path(user_id: @user.id), class: "inline-block rounded-lg px-6 py-3 bg-gradient-to-r from-lavender to-lavender-400 text-white font-semibold hover:shadow-lg transition-all duration-200" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
