<div class="container mx-auto px-4 py-8">
  <!-- Hero Section -->
  <div class="relative overflow-hidden rounded-2xl bg-charcoal-900 mb-8 p-12 md:p-16 shadow-2xl">
    <!-- Animated gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-lavender-900/90 via-charcoal-900 to-mustard-900/80"></div>

    <!-- Mesh gradient overlays -->
    <div class="absolute top-0 left-0 w-full h-full">
      <div class="absolute top-1/4 -left-20 w-96 h-96 bg-lavender-500/30 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 -right-20 w-80 h-80 bg-mustard-400/25 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-lavender-400/20 rounded-full blur-2xl"></div>
    </div>

    <!-- Geometric shapes -->
    <div class="absolute top-8 right-12 w-20 h-20 border-2 border-white/10 rotate-45"></div>
    <div class="absolute bottom-12 left-16 w-12 h-12 border-2 border-mustard/20 rotate-12"></div>
    <div class="absolute top-1/2 right-1/4 w-6 h-6 bg-lavender-400/40 rotate-45"></div>

    <!-- Grid pattern overlay -->
    <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 24px 24px;"></div>

    <div class="relative z-10">
      <div class="max-w-2xl">
        <!-- Eyebrow text -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-lg mb-6 border border-white/10">
          <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
          <span class="text-white/90 text-sm font-medium tracking-wide"><%= @projects.count %> <%= I18n.t('projects.views.index.active_projects') %></span>
        </div>

        <!-- Main heading -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 leading-tight">
          Build something
          <span class="bg-gradient-to-r from-lavender-300 via-lavender to-mustard bg-clip-text text-transparent">incredible</span>
          together
        </h1>

        <!-- Subheading -->
        <p class="text-lg md:text-xl text-white/70 mb-8 leading-relaxed max-w-xl">
          <%= I18n.t('projects.views.index.subheading') %>
        </p>

        <!-- CTA buttons -->
        <div class="flex flex-wrap gap-4">
          <% if authenticated? %>
            <%= link_to new_user_project_path(user_id: @user.id), class: "group inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-lavender to-lavender-600 text-white font-semibold rounded-lg hover:from-lavender-600 hover:to-lavender-700 hover:shadow-lg hover:shadow-lavender/25 transition-all duration-300" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              <%= I18n.t('projects.views.index.create') %>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @projects.each do |project| %>
      <%= link_to project_path(project), class: "group relative bg-gradient-to-br from-white via-white to-lavender-50/50 rounded-2xl shadow-lg border border-charcoal-100/50 p-6 hover:shadow-2xl hover:shadow-lavender/20 hover:-translate-y-2 hover:scale-[1.02] transition-all duration-500 overflow-hidden block" do %>
        <!-- Animated gradient accent bar -->
        <div class="absolute top-0 left-0 right-0 h-1.5 bg-gradient-to-r from-lavender via-mustard to-lavender-400 bg-[length:200%_100%] group-hover:animate-gradient"></div>

        <!-- Multiple decorative blurs -->
        <div class="absolute -top-16 -right-16 w-32 h-32 bg-gradient-to-br from-lavender/10 to-mustard/10 rounded-full blur-2xl group-hover:from-lavender/20 group-hover:to-mustard/20 transition-all duration-500"></div>
        <div class="absolute -bottom-8 -left-8 w-24 h-24 bg-gradient-to-tr from-mustard/5 to-lavender/5 rounded-full blur-xl group-hover:from-mustard/15 group-hover:to-lavender/15 transition-all duration-500"></div>

        <!-- Subtle grid pattern -->
        <div class="absolute inset-0 opacity-[0.02] group-hover:opacity-[0.04] transition-opacity duration-500" style="background-image: radial-gradient(circle, currentColor 1px, transparent 1px); background-size: 16px 16px;"></div>

        <div class="relative">
          <!-- Project icon/emoji placeholder -->
          <div class="flex items-start justify-between mb-4">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-lavender to-lavender-600 flex items-center justify-center shadow-lg shadow-lavender/25 group-hover:shadow-lavender/40 group-hover:scale-110 transition-all duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
              </svg>
            </div>
            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-gradient-to-r from-green-50 to-emerald-50 text-green-700 text-xs font-semibold rounded-full border border-green-200/50 shadow-sm">
              <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
              <%= I18n.t('projects.views.index.active') %>
            </span>
          </div>

          <h2 class="text-xl font-bold mb-2 truncate text-charcoal-800 group-hover:text-lavender-700 transition-colors duration-300"><%= project.name %></h2>
          <p class="text-charcoal-500 text-sm mb-6 line-clamp-2 leading-relaxed"><%= project.description %></p>

          <div class="flex items-center justify-between pt-4 border-t border-charcoal-100/50">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full bg-gradient-to-br from-lavender via-lavender-500 to-mustard flex items-center justify-center ring-2 ring-white shadow-md">
                <span class="text-white text-sm font-bold"><%= project.owner.name.first.upcase %></span>
              </div>
              <div class="flex flex-col">
                <span class="text-sm font-medium text-charcoal-700">
                  <%= project.owner.name %>
                </span>
                <span class="text-xs text-charcoal-400"><%= I18n.t('projects.views.index.creator') %></span>
              </div>
            </div>
            <div class="flex items-center gap-1 text-charcoal-400 group-hover:text-lavender-500 transition-colors duration-300">
              <span class="text-xs font-medium"><%= I18n.t('projects.views.index.view') %></span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <% if @projects.empty? %>
    <div class="text-center py-12">
      <div class="inline-block p-6 bg-white rounded-lg shadow-md border border-charcoal-200">
        <p class="text-charcoal-500 mb-4">No projects yet. Create your first project!</p>
        <% if authenticated? %>
          <%= link_to "Get started", new_user_project_path(user_id: @user.id), class: "inline-block rounded-md px-4 py-2 bg-mustard text-charcoal font-medium hover:bg-mustard-500 transition" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
