<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold text-charcoal">Projects</h1>
    <% if authenticated? %>
      <%= link_to "Create a project", new_user_project_path(user_id: @user.id), class: "rounded-lg px-6 py-3 text-lg bg-lavender text-white font-semibold hover:bg-lavender-500 transition animate-subtle-pulse" %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @projects.each do |project| %>
      <div class="bg-white rounded-lg shadow-md border-l-4 border-l-mustard border border-charcoal-200 p-6 hover:shadow-lg hover:border-lavender-300 transition">
        <h2 class="text-lg font-semibold mb-2 truncate text-charcoal"><%= project.name %></h2>
        <p class="text-charcoal-500 text-sm mb-4 line-clamp-3"><%= project.description %></p>
        <div class="flex justify-between items-center">
          <span class="text-xs text-charcoal-400">
            Created by <%= project.user.name %>
          </span>
          <span class="inline-block px-2 py-1 bg-lavender-100 text-lavender-700 text-xs rounded-full">
            Active
          </span>
        </div>
      </div>
    <% end %>
  </div>

  <% if @projects.empty? %>
    <div class="text-center py-12">
      <div class="inline-block p-6 bg-white rounded-lg shadow-md border border-charcoal-200">
        <p class="text-charcoal-500 mb-4">No projects yet. Create your first project!</p>
        <% if authenticated? %>
          <%= link_to "Get started", new_user_project_path(user_id: @user.id), class: "inline-block rounded-md px-4 py-2 bg-mustard text-charcoal font-medium hover:bg-mustard-500 transition" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
