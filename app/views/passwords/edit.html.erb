<div class="min-h-screen flex items-center justify-center px-4">
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-8 w-full max-w-md">
    <h1 class="text-2xl font-bold mb-6 text-center">Update your password</h1>

    <% if flash[:alert] %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md mb-4">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: password_path(params[:token]), method: :put, class: "flex flex-col gap-4" do |form| %>
      <div class="flex flex-col gap-2">
        <%= form.label :password, "New password", class: "text-sm font-medium text-gray-700" %>
        <%= form.password_field :password,
          required: true,
          autocomplete: "new-password",
          placeholder: "Enter new password",
          maxlength: 72,
          class: "border border-gray-300 rounded-md px-4 py-2 bg-white text-black focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <div class="flex flex-col gap-2">
        <%= form.label :password_confirmation, "Confirm password", class: "text-sm font-medium text-gray-700" %>
        <%= form.password_field :password_confirmation,
          required: true,
          autocomplete: "new-password",
          placeholder: "Repeat new password",
          maxlength: 72,
          class: "border border-gray-300 rounded-md px-4 py-2 bg-white text-black focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <%= form.submit "Save",
        class: "w-full border rounded-md px-4 py-2 bg-primary text-black font-medium hover:opacity-90 transition cursor-pointer" %>
    <% end %>
  </div>
</div>
