<div class="min-h-screen flex items-start justify-center px-4 pt-20">
  <div class="bg-white rounded-lg shadow-md border border-charcoal-200 p-8 w-full max-w-md">
    <h1 class="text-2xl font-bold mb-6 text-center text-charcoal">Sign up</h1>

    <%= form_with url: users_path, scope: :user, method: :post, class: "flex flex-col gap-4" do |form| %>
      <div class="flex flex-col gap-2">
        <%= form.label :name, "Name", class: "text-sm font-medium text-charcoal-700" %>
        <%= form.text_field :name,
          required: true,
          autofocus: true,
          autocomplete: "name",
          placeholder: "Enter your name",
          value: params[:name],
          class: "border border-charcoal-200 rounded-md px-4 py-2 bg-white text-charcoal focus:ring-2 focus:ring-lavender focus:border-transparent" %>
      </div>

      <div class="flex flex-col gap-2">
        <%= form.label :email_address, "Email", class: "text-sm font-medium text-charcoal-700" %>
        <%= form.email_field :email_address,
          required: true,
          autocomplete: "email",
          placeholder: "Enter your email address",
          value: params[:email_address],
          class: "border border-charcoal-200 rounded-md px-4 py-2 bg-white text-charcoal focus:ring-2 focus:ring-lavender focus:border-transparent" %>
      </div>

      <div class="flex flex-col gap-2">
        <%= form.label :password, "Password", class: "text-sm font-medium text-charcoal-700" %>
        <%= form.password_field :password,
          required: true,
          placeholder: "Enter your password",
          maxlength: 72,
          class: "border border-charcoal-200 rounded-md px-4 py-2 bg-white text-charcoal focus:ring-2 focus:ring-lavender focus:border-transparent" %>
      </div>

      <%= form.submit "Sign up",
        class: "w-full rounded-md px-4 py-2 bg-lavender text-white font-medium hover:bg-lavender-500 transition cursor-pointer" %>
    <% end %>

    <div class="mt-6 flex justify-between items-center">
      <%= link_to "Sign in", new_session_path, class: "text-sm text-charcoal-500 hover:text-lavender" %>
      <%= link_to "Forgot password?", new_password_path, class: "text-sm text-charcoal-500 hover:text-lavender" %>
    </div>
  </div>
</div>
