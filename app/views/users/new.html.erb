<div class="min-h-screen flex">
  <!-- Hero Section -->
  <div class="hidden lg:flex lg:w-1/2 bg-gradient-to-br from-lavender via-lavender-400 to-mustard relative overflow-hidden">
    <!-- Decorative Elements -->
    <div class="absolute top-20 left-10 w-32 h-32 bg-white/10 rounded-full blur-2xl"></div>
    <div class="absolute bottom-40 right-10 w-48 h-48 bg-white/10 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-mustard/20 rounded-full blur-xl"></div>

    <div class="flex flex-col justify-center px-12 xl:px-16 relative z-10">
      <h1 class="text-4xl xl:text-5xl font-bold text-white mb-6 leading-tight">
        <%= I18n.t('users.views.new.build_something') %><br/>
        <span class="text-white/90"><%= I18n.t('users.views.new.amazing_together') %></span>
      </h1>

      <p class="text-white/90 text-lg mb-10 max-w-md">
        <%= I18n.t('users.views.new.tagline') %>
      </p>

      <!-- Value Props -->
      <div class="space-y-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          </div>
          <span class="text-white font-medium"><%= I18n.t('users.views.new.propose_projects') %></span>
        </div>

        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <span class="text-white font-medium"><%= I18n.t('users.views.new.find_collaborators') %></span>
        </div>

        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <span class="text-white font-medium"><%= I18n.t('users.views.new.cocreate_ship') %></span>
        </div>
      </div>

      <!-- Social Proof -->
      <div class="mt-12 pt-8 border-t border-white/20">
        <div class="flex items-center gap-4">
          <div class="flex -space-x-3">
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-mustard to-lavender border-2 border-white"></div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-lavender to-mustard border-2 border-white"></div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-mustard to-lavender-400 border-2 border-white"></div>
          </div>
          <p class="text-white/80 text-sm">
            <%= I18n.t('users.views.new.join_creators') %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Form Section -->
  <div class="w-full lg:w-1/2 flex items-center justify-center px-6 py-12 bg-lavender-50">
    <div class="w-full max-w-md">
      <!-- Mobile Header -->
      <div class="lg:hidden text-center mb-8">
        <h1 class="text-3xl font-bold text-charcoal mb-2"><%= I18n.t('users.views.new.join_cocreate') %></h1>
        <p class="text-charcoal-500"><%= I18n.t('users.views.new.build_amazing') %></p>
      </div>

      <div class="bg-white rounded-2xl shadow-xl border border-charcoal-100 p-8">
        <!-- Gradient accent bar -->
        <div class="h-1 bg-gradient-to-r from-lavender via-lavender-400 to-mustard -mt-8 mb-8 rounded-t-2xl -mx-8"></div>

        <h2 class="text-2xl font-bold mb-2 text-charcoal"><%= I18n.t('users.views.new.create_account') %></h2>
        <p class="text-charcoal-500 mb-6"><%= I18n.t('users.views.new.start_collaborating') %></p>

        <% if flash[:alert] %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4 text-sm">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= form_with url: users_path, scope: :user, method: :post, class: "flex flex-col gap-5" do |form| %>
          <div class="flex flex-col gap-2">
            <%= form.label :name, I18n.t('users.views.new.name'), class: "text-sm font-medium text-charcoal-700" %>
            <%= form.text_field :name,
              required: true,
              autofocus: true,
              autocomplete: "name",
              placeholder: I18n.t('users.views.new.name_placeholder'),
              value: params[:name],
              class: "border border-charcoal-200 rounded-lg px-4 py-3 bg-white text-charcoal focus:ring-2 focus:ring-lavender focus:border-transparent transition" %>
          </div>

          <div class="flex flex-col gap-2">
            <%= form.label :email_address, I18n.t('users.views.new.email'), class: "text-sm font-medium text-charcoal-700" %>
            <%= form.email_field :email_address,
              required: true,
              autocomplete: "email",
              placeholder: I18n.t('users.views.new.email_placeholder'),
              value: params[:email_address],
              class: "border border-charcoal-200 rounded-lg px-4 py-3 bg-white text-charcoal focus:ring-2 focus:ring-lavender focus:border-transparent transition" %>
          </div>

          <div class="flex flex-col gap-2">
            <%= form.label :password, I18n.t('users.views.new.password'), class: "text-sm font-medium text-charcoal-700" %>
            <%= form.password_field :password,
              required: true,
              placeholder: I18n.t('users.views.new.password_placeholder'),
              maxlength: 72,
              class: "border border-charcoal-200 rounded-lg px-4 py-3 bg-white text-charcoal focus:ring-2 focus:ring-lavender focus:border-transparent transition" %>
          </div>

          <%= form.submit I18n.t('users.views.new.create_account_button'),
            class: "w-full rounded-lg px-4 py-3 bg-gradient-to-r from-lavender to-lavender-400 text-white font-semibold hover:from-lavender-500 hover:to-lavender-400 hover:shadow-lg transition-all duration-200 cursor-pointer mt-2" %>
        <% end %>

        <div class="mt-6 text-center">
          <p class="text-charcoal-500 text-sm">
            <%= I18n.t('users.views.new.have_account') %>
            <%= link_to I18n.t('users.views.new.sign_in'), new_session_path, class: "text-lavender font-medium hover:text-lavender-500 ml-1" %>
          </p>
        </div>
      </div>

      <p class="text-center text-xs text-charcoal-400 mt-6">
        <%= I18n.t('users.views.new.terms') %>
      </p>
    </div>
  </div>
</div>
