<div data-turbo-confirm-target="modal"
     data-action="keydown->turbo-confirm#handleKeydown"
     class="hidden fixed inset-0 z-50 overflow-y-auto"
     aria-labelledby="modal-title"
     role="dialog"
     aria-modal="true">

  <!-- Backdrop -->
  <div class="fixed inset-0 bg-charcoal-900 bg-opacity-75 backdrop-blur-sm transition-opacity"></div>

  <!-- Modal Container -->
  <div class="flex min-h-full items-center justify-center p-4">
    <!-- Modal Content -->
    <div class="relative bg-white rounded-2xl shadow-2xl border border-charcoal-100 max-w-md w-full overflow-hidden transform transition-all">
      <!-- Gradient accent bar -->
      <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-lavender via-lavender-400 to-mustard"></div>

      <!-- Modal Body -->
      <div class="p-6 pt-8">
        <!-- Icon -->
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-lavender-100 mb-4">
          <svg class="h-6 w-6 text-lavender-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>

        <!-- Message -->
        <div class="text-center mb-6">
          <p data-turbo-confirm-target="message" class="text-base text-charcoal-700 font-medium" id="modal-title">
            <!-- Message will be inserted here by Stimulus controller -->
          </p>
        </div>

        <!-- Buttons -->
        <div class="flex gap-4 justify-center">
          <button type="button"
                  data-turbo-confirm-target="cancelButton"
                  class="px-6 py-2 border border-charcoal-300 text-charcoal-700 rounded-lg hover:bg-charcoal-50 transition-all duration-200 font-medium">
            <%= I18n.t('shared.confirmation_modal.cancel', default: 'Annuler') %>
          </button>
          <button type="button"
                  data-turbo-confirm-target="confirmButton"
                  class="px-6 py-2 bg-gradient-to-r from-rose-500 to-rose-600 text-white rounded-lg hover:from-rose-600 hover:to-rose-700 hover:shadow-md transition-all duration-200 font-medium">
            <%= I18n.t('shared.confirmation_modal.confirm', default: 'OK') %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
