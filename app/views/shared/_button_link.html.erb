<%
  # Get computed button attributes from helper
  attrs = button_link_attributes(
    variant: defined?(variant) ? variant : nil,
    html_class: defined?(html_class) ? html_class : nil,
    http_method: defined?(http_method) ? http_method : nil,
    confirm: defined?(confirm) ? confirm : nil
  )
%>

<%= link_to text, path, **attrs %>
