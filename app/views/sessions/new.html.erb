<div class="min-h-screen flex">
  <!-- Hero Section -->
  <div class="hidden lg:flex lg:w-1/2 bg-gradient-to-br from-mustard via-lavender-400 to-lavender relative overflow-hidden">
    <!-- Decorative Elements -->
    <div class="absolute top-32 right-20 w-40 h-40 bg-white/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 left-16 w-32 h-32 bg-white/10 rounded-full blur-2xl"></div>
    <div class="absolute top-1/3 right-1/3 w-20 h-20 bg-lavender/20 rounded-full blur-xl"></div>

    <div class="flex flex-col justify-center px-12 xl:px-16 relative z-10">
      <h1 class="text-4xl xl:text-5xl font-bold text-white mb-6 leading-tight">
        Welcome back,<br/>
        <span class="text-white/90">creator</span>
      </h1>

      <p class="text-white/90 text-lg mb-10 max-w-md">
        Your projects and collaborators are waiting. Pick up where you left off and keep building.
      </p>

      <!-- What's happening -->
      <div class="space-y-4">
        <p class="text-white/70 text-sm font-medium uppercase tracking-wide">Continue your journey</p>

        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
            </svg>
          </div>
          <span class="text-white font-medium">Check your project updates</span>
        </div>

        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <span class="text-white font-medium">Connect with collaborators</span>
        </div>

        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          </div>
          <span class="text-white font-medium">Start a new project</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Form Section -->
  <div class="w-full lg:w-1/2 flex items-center justify-center px-6 py-12 bg-lavender-50">
    <div class="w-full max-w-md">
      <!-- Mobile Header -->
      <div class="lg:hidden text-center mb-8">
        <h1 class="text-3xl font-bold text-charcoal mb-2">Welcome Back</h1>
        <p class="text-charcoal-500">Sign in to continue building</p>
      </div>

      <div class="bg-white rounded-2xl shadow-xl border border-charcoal-100 p-8">
        <!-- Gradient accent bar -->
        <div class="h-1 bg-gradient-to-r from-mustard via-lavender-400 to-lavender -mt-8 mb-8 rounded-t-2xl -mx-8"></div>

        <h2 class="text-2xl font-bold mb-2 text-charcoal">Sign in</h2>
        <p class="text-charcoal-500 mb-6">Access your projects and collaborations</p>

        <% if flash[:alert] %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4 text-sm">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <% if flash[:notice] %>
          <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-4 text-sm">
            <%= flash[:notice] %>
          </div>
        <% end %>

        <%= form_with url: session_path, class: "flex flex-col gap-5" do |form| %>
          <div class="flex flex-col gap-2">
            <%= form.label :email_address, "Email", class: "text-sm font-medium text-charcoal-700" %>
            <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "username",
              placeholder: "you@example.com",
              value: params[:email_address],
              class: "border border-charcoal-200 rounded-lg px-4 py-3 bg-white text-charcoal focus:ring-2 focus:ring-lavender focus:border-transparent transition" %>
          </div>

          <div class="flex flex-col gap-2">
            <div class="flex justify-between items-center">
              <%= form.label :password, "Password", class: "text-sm font-medium text-charcoal-700" %>
              <%= link_to "Forgot password?", new_password_path, class: "text-xs text-lavender hover:text-lavender-500" %>
            </div>
            <%= form.password_field :password,
              required: true,
              autocomplete: "current-password",
              placeholder: "Enter your password",
              maxlength: 72,
              class: "border border-charcoal-200 rounded-lg px-4 py-3 bg-white text-charcoal focus:ring-2 focus:ring-lavender focus:border-transparent transition" %>
          </div>

          <%= form.submit "Sign in",
            class: "w-full rounded-lg px-4 py-3 bg-gradient-to-r from-lavender to-lavender-400 text-white font-semibold hover:from-lavender-500 hover:to-lavender-400 hover:shadow-lg transition-all duration-200 cursor-pointer mt-2" %>
        <% end %>

        <div class="mt-6 text-center">
          <p class="text-charcoal-500 text-sm">
            Don't have an account?
            <%= link_to "Sign up", new_user_path, class: "text-lavender font-medium hover:text-lavender-500 ml-1" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
