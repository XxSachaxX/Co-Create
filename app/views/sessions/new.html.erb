<div class="min-h-screen flex items-start justify-center px-4 pt-20">
  <div class="bg-white rounded-lg shadow-md border-t-4 border-t-lavender border border-charcoal-200 p-8 w-full max-w-md">
    <h1 class="text-2xl font-bold mb-6 text-center text-charcoal">Sign in</h1>

    <% if flash[:alert] %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md mb-4">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-md mb-4">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_with url: session_path, class: "flex flex-col gap-4" do |form| %>
      <div class="flex flex-col gap-2">
        <%= form.label :email_address, "Email", class: "text-sm font-medium text-charcoal-700" %>
        <%= form.email_field :email_address,
          required: true,
          autofocus: true,
          autocomplete: "username",
          placeholder: "Enter your email address",
          value: params[:email_address],
          class: "border border-charcoal-200 rounded-md px-4 py-2 bg-white text-charcoal focus:ring-2 focus:ring-lavender focus:border-transparent" %>
      </div>

      <div class="flex flex-col gap-2">
        <%= form.label :password, "Password", class: "text-sm font-medium text-charcoal-700" %>
        <%= form.password_field :password,
          required: true,
          autocomplete: "current-password",
          placeholder: "Enter your password",
          maxlength: 72,
          class: "border border-charcoal-200 rounded-md px-4 py-2 bg-white text-charcoal focus:ring-2 focus:ring-lavender focus:border-transparent" %>
      </div>

      <%= form.submit "Sign in",
        class: "w-full rounded-md px-4 py-2 bg-lavender text-white font-medium hover:bg-lavender-500 transition cursor-pointer" %>
    <% end %>

    <div class="mt-6 flex justify-between items-center">
      <%= link_to "Sign up", new_user_path, class: "text-sm text-charcoal-500 hover:text-lavender" %>
      <%= link_to "Forgot password?", new_password_path, class: "text-sm text-charcoal-500 hover:text-lavender" %>
    </div>
  </div>
</div>
