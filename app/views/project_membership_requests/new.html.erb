<div class="container mx-auto px-4 py-8 max-w-2xl">
  <!-- Back navigation -->
  <div class="mb-6">
    <%= link_to project_path(@project), class: "inline-flex items-center gap-2 text-charcoal-500 hover:text-lavender-700 transition-colors duration-200" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      <span class="text-sm font-medium"><%= I18n.t('passwords.views.new.back') %></span>
    <% end %>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-lg shadow-md border-t-4 border-t-mustard border border-charcoal-200 p-8">
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-charcoal mb-2"><%= I18n.t('passwords.views.new.request_membership') %> <%= @project.name %></h1>
      <p class="text-sm text-charcoal-500"><%= I18n.t('project_membership_requests.views.new.notice') %></p>
    </div>

    <%= form_with model: @project_membership_request, url: project_membership_requests_path(project_id: @project.id), local: true, class: "flex flex-col gap-4" do |form| %>
      <div class="flex flex-col gap-2">
        <%= form.label :description, I18n.t('project_membership_requests.views.new.reason_to_join'), class: "text-sm font-medium text-charcoal-700" %>
        <%= form.text_area :description,
          required: true,
          rows: 8,
          placeholder: I18n.t('project_membership_requests.views.new.description_placeholder'),
          class: "border border-charcoal-200 rounded-md px-4 py-2 bg-white text-charcoal focus:ring-2 focus:ring-lavender focus:border-transparent resize-none" %>
      </div>

      <div class="flex gap-4 mt-2">
        <%= form.submit I18n.t('project_membership_requests.views.new.send_request'),
          class: "rounded-md px-6 py-2 bg-lavender text-white font-medium hover:bg-lavender-500 transition cursor-pointer" %>
        <%= link_to I18n.t('project_membership_requests.views.new.cancel'), project_path(@project), class: "border border-charcoal-200 rounded-md px-6 py-2 text-charcoal-700 hover:bg-charcoal-50 transition inline-block text-center" %>
      </div>
    <% end %>
  </div>
</div>
