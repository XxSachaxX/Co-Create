<div class="w-full max-w-4xl mx-auto">
  <!-- Back Button -->
  <div class="mb-6">
    <%= link_to root_path, class: "inline-flex items-center gap-2 text-charcoal-500 hover:text-lavender-700 transition-colors duration-200" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      <span class="text-sm font-medium"><%= t('static_pages.views.terms.back') %></span>
    <% end %>
  </div>

  <!-- Content Card -->
  <div class="bg-white rounded-lg shadow-md border-t-4 border-t-lavender border border-charcoal-200 p-8 md:p-12">
    <h1 class="text-4xl font-bold text-charcoal mb-2"><%= t('static_pages.views.terms.title') %></h1>
    <p class="text-sm text-charcoal-500 mb-8"><%= t('static_pages.views.terms.last_updated') %></p>

    <div class="prose prose-charcoal max-w-none">
      <p class="text-charcoal-600 leading-relaxed">
        <%= t('static_pages.views.terms.placeholder_content') %>
      </p>
    </div>
  </div>
</div>
